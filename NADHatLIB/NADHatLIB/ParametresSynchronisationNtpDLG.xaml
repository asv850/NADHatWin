<ContentDialog
    x:Class="NADHatLIB.ParametresSynchronisationNtpDLG"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NADHatLIB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Paramètres de synchronisation NTP :"
    PrimaryButtonText="OK"
    SecondaryButtonText="Annuler" RenderTransformOrigin="0.5,0.5" >
  <ContentDialog.RenderTransform>
    <CompositeTransform TranslateY="-100"/>
  </ContentDialog.RenderTransform>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Column="0" Grid.Row="0" Text="APN : " VerticalAlignment="Center" TextAlignment="Right"/>
    <TextBox x:Name="ApnTBX" Grid.Column="1" Grid.Row="0"  Margin="4"/>

    <TextBlock Grid.Column="0" Grid.Row="1" Text="NTP Url : " VerticalAlignment="Center" TextAlignment="Right"/>
    <TextBox x:Name="NtpUrlTBX" Grid.Column="1" Grid.Row="1" Margin="4"/>
  </Grid>
</ContentDialog>
